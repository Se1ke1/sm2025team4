<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.sm.sm2025team4.repository.Cust_InfoRepository">

    <select id="select" parameterType="int" resultType="Cust_Info">
        SELECT * FROM cust_info WHERE custinfo_no=#{custinfo_no}
    </select>
    <select id="selectAll" resultType="Cust_Info">
        SELECT * FROM cust_info
    </select>
    <insert id="insert" parameterType="Cust_Info">
        INSERT INTO cust_info VALUES (#{custinfo_no},#{cust_id},#{custinfo_name},now(),now())
    </insert>
    <update id="update" parameterType="Cust_Info">
        UPDATE cust SET cust_pwd=#{cust_pwd},cust_name=#{cust_name},cust_update=now() WHERE cust_id=#{cust_id}
    </update>
    <delete id="delete" parameterType="int">
        DELETE FROM cust WHERE cust_id=#{cust_id}
    </delete>

</mapper>